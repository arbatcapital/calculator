generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  name          String       @default("N0_NAME")
  emailVerified Boolean      @default(false)
  email         String?      @unique
  createdAt     DateTime     @default(now())
  application   Application?
}

model Application {
  id                         String    @id @default(uuid())
  businessType               String?
  businessName               String?
  fundingAmount              String?
  fundingReason              String?
  businessStartMonth         String?
  businessStartYear          String?
  annualRevenue              String?
  ein                        String?
  businessState              String?
  businessAddress            String?
  name                       String?
  birthday                   DateTime?
  phoneNumber                String?
  email                      String?   @unique
  education                  String?
  homeOwnershipStatus        String?
  industry                   String?
  employmentStatus           String?
  creditScore                String?
  homeAddress                String?
  licenseDoc                 String?
  businessAddressDoc         String?
  einDoc                     String?
  govIdDoc                   String?
  mpsDoc                     String?
  mercantProcessingStatement String?
  stepOneCompleted           Boolean   @default(false)
  stepTwoCompleted           Boolean   @default(false)
  isCompleted                Boolean   @default(false)
  ssn                        String?   @unique
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt
  user                       User?     @relation(fields: [userId], references: [id])
  userId                     String?   @unique
}
